<section class="register-user">
    <h1 class='header'>New Member Registration Form</h1>
    <form action="/register/new" method='POST'>
         <section class="order-form">

        <section class='cust-info cust-reg new-reg brdr'>

            <label for="firstName">First Name </label>
            <input type="text" name='firstName' id='firstName' required>

            <label for="lastName">Last Name </label>
            <input type="text" name='lastName' id='lastName' required>

            <label for="email">Email </label>
            <input type="email" name='email' id='email' required>

            <label for="password">Password </label>
            <input type="password" name='password' id='password' required>
            <section class='addr'> 
                <label for="address">Address</label>
                <input type="text" name='address' id='address' required>

                <label for="city">City</label>
                <input type="text" name='city' id='city' required>

                <label for="state">State</label>
                <input type="text" name='state' id='state' required>

                <label for="zip">Zip</label>
                <input type="text" name='zip' id='zip' required>
                <br>
                <br>
                
            </section>

            <section id='sam' class='sam'>
                 <input type="checkbox" id='cb' name="sameAddr" >Same As Mailing
            </section>
           

            <fieldset class='billing billing1'>
                <legend> Billing Infomation</legend>
                <label for="baddress">Address</label>
                <input type="text" name='baddress' id='baddress'>

                <label for="bcity">City</label>
                <input type="text" name='bcity' id='bcity'>

                <label for="bstate">State</label>
                <input type="text" name='bstate' id='bstate'>

                <label for="bzip">Zip</label>
                <input type="text" name='bzip' id='bzip'>

            </fieldset>

        </section>
        <button type='submit' id='newReg-btn'>Register</button>
    </form>
</section>
  