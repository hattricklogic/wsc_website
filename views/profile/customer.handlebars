<h1>My Profile </h1>

<section class="edit-user">
    <h1>Edit Customer Information</h1>
    <form action="/register" method='POST'>
        <section class="form-container">
        <hr>
        <label for="firstName">First Name </label>
        <input type="text"  name='firstName' id='firstName' value={{user.fname}} required> 

        <label for="lastName">Last Name </label>
        <input type="text"  name='lastName'id='lastName' value={{user.fname}} required> 

        <label for="email">Email </label>
        <input type="email"  name='email' id='email' value={{user.fname}} required> 

        <label for="password">Password </label>
        <input type="password"  name='password' id='password' value={{user.fname}} required> 

        <button type='submit' id='register-btn'>Register</button>
    
        </section>
    </form>
</section>
  