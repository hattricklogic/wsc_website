<h1>New Customer Registration</h1>
<form action="/admin/newCust" method='POST'>
    <section class="order-form">

        <section class='cust-info'>

            <label for="firstName">First Name </label>
            <input type="text" name='firstName' id='firstName' required>

            <label for="lastName">Last Name </label>
            <input type="text" name='lastName' id='lastName' required>

            <label for="email">Email </label>
            <input type="email" name='email' id='email' required>

            <section id='sam1' class='sam1'>
                <input type="checkbox" id='cb' name="sameAddr">Same As Shipping
                <br>
                <br>
            </section>
            <fieldset class='billing'>
                <legend> Billing Infomation</legend>
                <label for="address">Address</label>
                <input type="text" name='address' id='address' required>

                <label for="city">City</label>
                <input type="text" name='city' id='city' required>

                <label for="state">State</label>
                <input type="text" name='state' id='state' required>

                <label for="zip">Zip</label>
                <input type="text" name='zip' id='zip' required>

            </fieldset>

        </section>

        <section class='order-info'>
            <section class='col'>

                <label for="price">Price </label>
                <input type="text" name='price' id='price'>

                <label for="product">Product</label>
                <select name='product' id='product'>
                    <option name='plaque' value="Plaque">Plaque</option>
                    <option name='sweater' value="Sweater">Sweater</option>
                    <option name='tshirt' value="Tshirt">T-Shirt</option>
                    <option name='trophy' value="Trophy">Trophy</option>
                </select>

                <label for="qty">Quantity </label>
                <input type='number' name='qty' id='qty' value="1" required>

                <label for="job">Job </label>
                <select name="job" id="job">
                    <option value="printing">Print</option>
                    <option value="engraving">Engraving</option>
                </select>

            </section>

            <label for="msg" id='msg'>Message</label>
            <textarea name='msg' cols="50" placeholder="Craft your message...">
            </textarea>
            <select id="paymentType">
                <option value="COD">Cash on Delivery</option>
                <option value="Cash">Cash</option>
                <option value="Invoice" selected>Invoice</option>
            </select>
            <br>
            <br>
            <br>
            <br>
            <br>
            <span id="total">0.00</span>
        </section>
    </section>

    <button type='submit' id='save-btn'>Create</button>
</form>