<h1>All Products</h1>
    <ul class='products product-items'>
 {{#each products}}
    {{#if plaque}}
       <form action="/orders/{{id}}?_method=PUT" method='POST'>
         <li> 
            <img src="/imgs/Plaque/{{product}}.jpg" alt="">
            <input type="hidden" name='_method' value='PUT'>
            <input type='hidden' name='choice' value={{product}}>
         </li>
         <input type="submit"  class='productBtn' value="Order">
       </form>
    {{/if }}

    {{#if sweater}}
     <form action="/orders/{{id}}?_method=PUT" method='PUT'>
         <li name={{product}}>
            <img src="/imgs/Sweatshirts/{{sweater}}_{{product}}.jpg" alt="">
            <input type="submit" class='productBtn' value="Add To Cart">
         </li>
      </form>
    {{/if }}

    {{#if tshirt}}
     <form action="/orders/{{id}}?_method=PUT" method='PUT'>
       <li name={{product}}>
          <img src="/imgs/T_shirts/{{tshirt}}_{{product}}.jpg" alt="">
         <input type="submit" class='productBtn' value="Add To Cart">
       </li>
      </form>
    {{/if}}  

    {{#if trophy}}
      
      <form action="/orders/{{id}}?_method=PUT" method='PUT'>

         <li name={{product}} >
            <img src="/imgs/Trophy/{{product}}_{{gender}}.jpg" alt="">
            <input type="submit" class='productBtn' value="Add To Cart">
         </li>

      </form>
    {{/if}}   

 {{else}}
    <section> <h1>No Products Found! </h1> </section>

{{/each}}
    </ul>